@model DatabaseService.Models.Music

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавить Музыку</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/LeftMenu.css" , rel="stylesheet" />
    <link href="~/css/AddMusicForm.css" , rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="main-content">
        <div class="form-container">
            <form asp-action="AddMusic" method="post">
                <input type="hidden" name="PlaylistId" value="@Model.PlaylistId" />
                <div class="form-group">
                    <label for="YouTubeLink">Ссылка на YouTube</label>
                    <input type="text" name="YouTubeLink" class="form-control" required pattern="^(https?:\/\/)?(www\.)?(youtube\.com\/watch\?v=|youtu\.be\/|music\.youtube\.com\/watch\?v=).+$" title="The YouTube link is not valid." />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a href="@Url.Action("PlaylistDetails", "Home", new { area = "Home", playlistId = Model.PlaylistId })" class="btn btn-secondary">Назад к плейлисту</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@{
    Layout = "";
}
