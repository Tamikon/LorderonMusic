<div class="form-container" id="addMusicForm">
    <h4>Добавить новую музыку</h4>
    <form asp-action="AddMusic" method="post">
        <input type="hidden" name="playlistId" value="@Model.Id" />
        <div class="form-group">
            <label for="YouTubeLink">Ссылка на YouTube</label>
            <input type="text" name="YouTubeLink" class="form-control" required pattern="^(https?:\/\/)?(www\.)?(youtube\.com\/watch\?v=|youtu\.be\/|music\.youtube\.com\/watch\?v=).+$" title="The YouTube link is not valid." />
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
        <button type="button" class="btn btn-secondary" onclick="hideAddMusicForm()">Назад</button>
    </form>
</div>
