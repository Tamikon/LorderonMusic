@model DatabaseService.Models.Music

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Прослушать музыку</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>@Model.Title</h2>
        <h3>@Model.Artist</h3>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@GetYouTubeVideoId(Model.YouTubeLink)" allowfullscreen></iframe>
        </div>
        <a href="@Url.Action("PlaylistDetails", new { playlistId = Model.PlaylistId })" class="btn btn-secondary">Вернуться к трекам</a>
    </div>
</body>
</html>

@functions {
    private string GetYouTubeVideoId(string url)
    {
        var uri = new Uri(url);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        return query["v"];
    }
}

@{
    Layout = "";
}
